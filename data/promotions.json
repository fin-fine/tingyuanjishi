        {
          "id": "influence_path",
          "name": "权势晋升",
          "description": "掌握府中大权，势力足以匹敌正室",
          "requirements": {
            "favor": 95,
            "status": 90,
            "network": 90,
            "scheming": 85,
            "business": 70,
            "npc_jinshu": 95
